<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <environments default="development">
        <environment id="development">
            <transactionManager type="MANAGED"/>
            <dataSource type="JNDI">
                <property name="data_source" value="java:/postgres"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mapper/ClienteMapper.xml" />
        <mapper resource="mapper/ProveedorMapper.xml" />
        <mapper resource="mapper/CompraMapper.xml" />
        <mapper resource="mapper/ProductoMapper.xml" />
        <mapper resource="mapper/ProductoDupicadoMapper.xml" />
        <mapper resource="mapper/CompraDetalleMapper.xml" />
        <mapper resource="mapper/VentaMapper.xml" />
        <mapper resource="mapper/VentaDetalleMapper.xml" />
    </mappers>
</configuration>